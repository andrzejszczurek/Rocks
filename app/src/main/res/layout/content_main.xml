<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/buttonBarStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.assolution.rocks.MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_row="2"
    android:layout_column="2">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/rock_napis"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


        <Button
            android:textColor="#8F8F8F"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/view_all_btn"
            android:background="@drawable/button_selector"
            android:text="Pokaż Najnowsze" />

        <Button
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            android:textColor="#8F8F8F"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/view_my_btn"
            android:background="@drawable/button_selector"
            android:text="Pokaż Moje" />


        <Button
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            android:textColor="#8F8F8F"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/add_item_btn"
            android:background="@drawable/button_selector"
            android:text="Dodaj wpis" />

        <Button
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            android:textColor="#8F8F8F"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/search_btn"
            android:background="@drawable/button_selector"
            android:text="Wszukaj Wpis" />

</LinearLayout>
