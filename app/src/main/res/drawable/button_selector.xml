<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="0dp"
                />
            <gradient
                android:angle="135"
                android:centerX="50%"
                android:centerColor="#111212"
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="0dp"
                android:color="#878787"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="0dp"
                />
            <gradient
                android:angle="135"
                android:centerX="50%"
                android:centerColor="#697070"
                android:startColor="#000000"
                android:endColor="#000000"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="0dp"
                android:color="#878787"
                />
        </shape>
    </item>
</selector>